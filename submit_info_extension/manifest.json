{
  "manifest_version": 3,
  "name": "URL Submit",
  "description": "Base Level Extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_icon": "sleeping_state.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": [
            "<all_urls>"
        ],
        "js": ["content.js"],
        "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index_state.html", "sleep_state.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
